<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/total_mines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total of mines"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/marked_mines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mines marked"
        android:layout_below="@id/total_mines"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/reset_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/mark_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Mark" />

    <com.android.cleophee_itier_3076679_ass2.GameGridView
        android:id="@+id/gameGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"/>

</RelativeLayout>